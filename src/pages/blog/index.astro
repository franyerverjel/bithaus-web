---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead
      title={`Blog - ${SITE_TITLE}`}
      description="Artículos técnicos y casos de estudio sobre desarrollo de software y automatización"
      }
    />
  </head>
  <body class="bg-background text-foreground">
    <div class="flex min-h-screen flex-col bg-background text-foreground">
      <Header />
      <main class="flex-grow py-20 md:py-32">
        <div class="container max-w-7xl mx-auto px-4">
          {/* Header del Blog */}
          <div class="mb-16 text-center">
            <div
              class="inline-flex items-center gap-2 bg-emerald-500/10 text-emerald-400 px-4 py-2 rounded-full text-sm font-medium mb-6 border border-emerald-500/20"
            >
              <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse">
              </div>
              Conocimientos compartidos
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
              Blog Técnico
            </h1>
            <p
              class="text-lg text-muted-foreground max-w-3xl mx-auto leading-relaxed"
            >
              Artículos y casos de estudio sobre cómo la tecnología puede
              <span class="text-emerald-400 font-semibold"
                >simplificar procesos complejos</span
              > en tu negocio.
            </p>
          </div>

          {/* Grid de Posts */}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
              posts.map((post, index) => (
                <article
                  class={`group ${index === 0 ? "md:col-span-2 lg:col-span-3" : ""}`}
                >
                  <a href={`/blog/${post.id}/`} class="block">
                    <div class="bg-card/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-emerald-500/20 hover:border-emerald-400/40 transition-all duration-300 group-hover:shadow-xl group-hover:shadow-emerald-500/10">
                      <div class="relative overflow-hidden">
                        <img
                          width={720}
                          height={360}
                          src={post.data.heroImage}
                          alt={post.data.title}
                          class={`w-full ${index === 0 ? "h-64 md:h-80" : "h-48"} object-cover group-hover:scale-105 transition-transform duration-500`}
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-background/60 to-transparent opacity-60" />
                      </div>
                      <div class={`p-6 ${index === 0 ? "md:p-8" : ""}`}>
                        <div class="flex items-center gap-2 mb-3">
                          <div class="w-2 h-2 bg-emerald-500 rounded-full" />
                          <span class="text-emerald-400 text-sm font-medium">
                            <FormattedDate date={post.data.pubDate} />
                          </span>
                        </div>
                        <h2
                          class={`font-bold text-foreground group-hover:text-emerald-400 transition-colors mb-3 ${index === 0 ? "text-2xl md:text-3xl" : "text-xl"}`}
                        >
                          {post.data.title}
                        </h2>
                        {post.data.description && (
                          <p class="text-muted-foreground text-sm leading-relaxed">
                            {post.data.description}
                          </p>
                        )}
                      </div>
                    </div>
                  </a>
                </article>
              ))
            }
          </div>
        </div>
      </main>
      <Footer />
    </div>
  </body>
</html>
